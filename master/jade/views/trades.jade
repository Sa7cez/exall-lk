extends ../_layout

block active
  - sidebar_active = 'trades.html'

block content
  
  .row
    .col-xs-12.col-md-8.col-lg-9

      // START buysell tab
      #buysell.panel.panel-transparent(role='tabpanel')
        // Nav tabs
        ul.nav.nav-tabs.nav-justified(role='tablist')
          li.active(role='presentation')
            a.bb0(href='#buy', aria-controls='buy', role='tab', data-toggle='tab', data-localize="trades.BUY")
          li(role='presentation')
            a.bb0(href='#sell', aria-controls='sell', role='tab', data-toggle='tab', data-localize="trades.SELL")
        // Tab panes
        .tab-content.bg-white
          #buy.tab-pane.active(role='tabpanel') 
            .container-fluid
              .row
                .col-lg-12
                    .table-responsive
                      table#ordersBuy.table.table-striped
                        thead
                          tr
                            th(style='width:10%').message
                              .icon-message
                            th(style='width:20%', data-localize="trades.ORDER")
                            th(style='width:14%') BTC
                            th(style='width:20%', data-localize="trades.AMOUNT")
                            th(style='width:20%', data-localize="trades.STATUS")
                            th(style='width:10%', data-localize="trades.DATE").date 
                            th(style='width:6%').full-info  
                        tbody
            .panel-footer
              a.btn.btn-orange.btn-lg(href='#', data-localize="trades.CREATE_ORDER")
          #sell.tab-pane(role='tabpanel') 
            .container-fluid
              .row
                .col-lg-12
                    .table-responsive
                      table#ordersSell.table.table-striped
